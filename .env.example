# UniFi Controller Configuration
UNIFI_CONTROLLER_URL=https://192.168.1.7:8443
UNIFI_USERNAME=your_username
UNIFI_PASSWORD=your_password
UNIFI_HAS_VALID_CERT=false
UNIFI_SITE_ID=default

# WiFi Configuration (Optional)
WIFI_SSID=
WIFI_PASSWORD=

# Network Configuration (Optional)
GUEST_SUBNETWORK=Y

# Timezone (Optional)
TIMEZONE=America/Edmonton

# Rolling Voucher Configuration (Optional)
ROLLING_VOUCHER_ENABLED=false
ROLLING_VOUCHER_DURATION_MINUTES=1440

# Quick Create Voucher Tiers (Optional)
# Format: name|duration_minutes|download_kbps|upload_kbps|data_limit_mb
# Use 0 for unlimited speed/data
VOUCHER_TIER_PREMIUM=Premium|1440|0|0|0
VOUCHER_TIER_STANDARD=Standard|1440|10000|5000|5000
VOUCHER_TIER_BASIC=Basic|240|5000|2000|1000
VOUCHER_TIER_GUEST=Guest|60|2000|1000|500
